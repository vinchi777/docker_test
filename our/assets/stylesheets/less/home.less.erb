@import 'bootstrap/variables';

//

.top-bottom-padding(@padding: 50px) {
    padding-top: @padding;
    padding-bottom: @padding;
}

.header-paragraph-format(@h3-margin-bottom: @line-height-computed / 2) {
    h3 {
        margin-top: 0px;
        margin-bottom: @h3-margin-bottom;

        & + p {
            margin-bottom: 0px;
        }
    }
}

#home {
    padding-top: 0;

    .more .fa {
        padding-right: 5px;
    }

    .banner {
        background: url("<%= asset_path 'home.jpg'%>") no-repeat center top fixed;
        background-size: cover;
        color: #fff;
        height: 600px;
        padding-top: 90px;
        position: relative;
        text-align: center;

        h1 {
            font-size: 60px;
            margin-bottom: 5px;
        }

        .tagline {
            background-color: rgba(0, 0, 0, .30);
            display: inline-block;
            font-size: 21px;
            padding: 5px 10px;
        }

        .call-to-action {
            padding-top: 40px;
            font-size: 18px;

            span {
                padding-right: 20px;
            }
            .btn {
                font-family: 'Signika Semibold';
                margin-left: 15px;
            }
        }
    }

    .reviewers {
        text-align: center;
        .top-bottom-padding;

        .header-paragraph-format;

        .coverflow-wrapper {
            margin: 30px 0px 20px 0px;
            height: 400px;
            overflow: hidden;

        }

        .more {
            color: #D96459;
        }
    }

    .strategic-location {
        text-align: center;
        .top-bottom-padding;

        .fa {
            font-size: 90px;
            color: #555;
        }

        h3 {
            margin: 0px;
        }

        img {
            width: 125px;
        }

        .content {
            margin-top: 50px;
            h5 {
                margin: 15px 0px 10px 0px;
                color: #555;
            }
            p {
                margin: 0px;
                color: #888;
            }
        }
    }

    .services {
        text-align: center;

        .service {
            height: 300px;
            background-position: center center;
            background-size: cover;
            background-repeat: no-repeat;
            padding: 0px;
            position: relative;

            p {
                background-color: rgba(0, 0, 0, .60);
                bottom: 0;
                color: white;
                left: 0;
                margin: 0px;
                padding: 5px 15px;
                position: absolute;
                right: 0;
                width: 100%;
            }
        }

        .description {
            .top-bottom-padding(20px);

            .header-paragraph-format(0px);
        }
    }

    .price-affordable {
        .description {
            padding-top: 180px;
        }

        img {
            padding-top: 100px;
            text-align: right;
            max-width: 100%;
        }

        .more {
            color: #E27A3F;
        }
    }

    .trackrecord {
        background-color: #333333;
        border-top: solid 4px #999999;
        color: #fff;
        .top-bottom-padding(60px);

        img {
            max-width: 100%;
        }

        .description {
            text-align: right;
            padding-top: 40px;

            .more {
                color: #0BB4FF;

                .fa {
                    padding-right: 0px;
                    padding-left: 5px;
                }
            }
        }
    }

    .student-served {
        padding: 30px 0px;
        background-color: #3ea3c9;
        color: white;
        text-align: center;
        font-size: 29px;

        #countup {
            font-size: 60px;
        }
    }

    .testimonials {
        text-align: center;
        .top-bottom-padding;
        .header-paragraph-format(0px);

        .testimony {
            margin-top: 45px;

            b, p {
                display: block;
            }

            .title {
                color: #808080;
            }

            .quote {
                border-top: solid 1px #e8e8e8;
                border-bottom: solid 1px #e8e8e8;
                .top-bottom-padding(10px);
            }

        }
    }
}