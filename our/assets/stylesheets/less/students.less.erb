@import "variables";

/* Common */
#students, #student {
    i.fa {
        margin-right: 8px;
    }

    .enroll i.fa.fa-check {
        color: #45B29D;
    }

    .enroll i.fa.fa-clock-o {
        color: #F2E394;
    }
}

#students {
    min-width: 360px;
    .filter .form-group {
        margin-top: 10px;
        margin-right: 10px;
    }

    .filter .form-group label {
        margin-right: 6px;
    }

    .filter input.filter {
        height: 30px;
        padding-top: 3px;
    }
    .students .student {
        .col-xs-1, .col-xs-2, .col-xs-3, .col-xs-4, .col-xs-5, .col-xs-6,
        .col-xs-7, .col-xs-8, .col-xs-9, .col-xs-10, .col-xs-11, .col-xs-12 {
            padding-left: 0;
            padding-right: 0;
        }
        padding-left: 10px;
        padding-right: 10px;
    }
    .students .student .profile-pic {
        width: 68px;
        min-width: 68px;
    }

    .students .student .info {
        padding-left: 0;
        .name {
            color: #45B29D;
            font-family: "Signika Semibold";
            float: left;
            font-size: 15px;
            margin-right: 6px;
        }
        .email {
            font-size: 14px;
            font-style: italic;
            color: darkgray;
            float: left;
            margin-right: 6px;

        }
        .school {
            color: #323232;
            font-family: 'Signika Light';
            font-size: 14px;
            float: left;
            margin-right: 6px;

        }
        .address {
            color: #999999;
            font-family: 'Signika Light';
            font-size: 14px;
            float: left;
            margin-right: 6px;
        }
    }

    .students .student .account a.no-user {
        color: #d3d3d3;
    }

    .students .student .account a.has-user {
        color: #5f5f5f;
    }

    .students .student .enroll {
        min-width: 280px;
    }

    .students .student .payment i.fa.fa-money {
        color: #DF5A49;
    }

    .students .student .payment {
        min-width: 140px;
    }

    .students .student .payment .amount {
        text-align: right;
        float: right;
    }

    .students .student .account {
        line-height: 55px;
        font-size: 21px;
    }
    .students .student .enroll,
    .students .student .payment,
    .students .student .actions {
        line-height: 50px;
    }

    @media (min-width: 768px) {
        .students .student .actions {
            float: right;
        }
    }

    @media (max-width: 1200px) {
        .students .student .actions {
            float: left;
            height: 35px;
            line-height: 53px;
        }

        .students .student .enroll,
        .students .student .payment {
            line-height: 35px;
        }
    }

    @media (max-width: 767px) {
        .students .student .payment {
            line-height: 14px;
            height: 17px;
            clear: both;
        }
    }

    .students .student .actions {
        margin-right: 0;
        width: 58px;
    }

    .students .student .actions a {
        display: block;
        margin-left: 6px;
        float: left;
    }
}

#student {

    header {
        margin-bottom: 10px;
    }

    header img.profile {
        height: 68px;
        width: 68px;
        float: left;
    }

    header .profile-pic .upload {
        text-align: center;
        float: left;
        width: 150px;
    }
    header .upload-link {
        float: left;
        margin-top: 5px;
        margin-left: 12px;
        font-size: 14px;
    }
    header .upload input[type='file'] {
        display: none;
    }

    header .upload .preview {
        font-size: 11px;
        margin-top: 3px;
    }

    @media (max-width: 1200px) {
        header .profile-pic {
            width: 10%
        }
    }

    @media (max-width: 992px) {
        header .profile-pic {
            width: 11%
        }
    }

    @media (max-width: 768px) {
        header .name-container {
        }
    }

    header .name {
        margin-top: 10px;
    }

    header .name > div {
        padding-left: 0;
    }

    header .name input {
        float: left;
        margin-right: 5px;
        margin-top: 6px;
    }

    header .status {
        float: left;
        clear: both;
        margin-top: 9px;
    }

    header .status .no-info {
        color: #a0a0a0;
    }

    header .actions {
        position: absolute;
        top: 42px;
        right: 15px;
    }

    .save.btn {
        width: 110px;
    }

    .panel {
        margin-bottom: 10px;
    }

    .first-name {
        padding-right: 5px;
    }

    .last-name {
        padding-left: 5px;
    }

    .parents .control-label {
        text-align: left;
    }

    .parents .contact {
        padding-top: 10px;
    }

    @media (max-width: 992px) and (min-width: 768px) {
        .parents .control-label {
            text-align: right;
        }
    }

    .year {
        width: 107px;
    }

    .others textarea {
        height: 75px;
        max-width: 485px;
    }

    .others i.fa {
        font-size: 1.6em;
    }

    .others .social {
        margin-top: 8px;
    }

    .others .social label {
        padding-right: 0;
    }

    /** Bootstrap Override */
    .form-group {
        margin-bottom: 10px;
    }

    .form-horizontal .control-label {
        padding-top: 2px;
    }

    .date-picker {
        width: 100%;
    }
}

footer.admin {
    min-width: 465px;
}