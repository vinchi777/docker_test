    = f.date_select :start
  .field
    = f.label :end
    = f.date_select :end
  .field
    = f.label :promoStart
    = f.date_select :promoStart
  .field
    = f.label :promoEnd
    = f.date_select :promoEnd
  .field
    = f.label :repeater
    = f.text_field :repeater
  .field
    = f.label :fullReview
    = f.text_field :fullReview
  .field
    = f.label :doubleReview
    = f.text_field :doubleReview
  .field
    = f.label :coaching
    = f.text_field :coaching
  .field
    = f.label :reservation
    = f.text_field :reservation
  .actions = f.submit 'Save'
