= form_for @review_season do |f|
  - if @review_season.errors.any?
    #error_explanation
      h2 = "#{pluralize(@review_season.errors.count, "error")} prohibited this review_season from being saved:"
      ul
        - @review_season.errors.full_messages.each do |message|
          li = message

  .field
