/***
 Site's variables
*****/
/* Common */
#students i.fa,
#student i.fa {
  margin-right: 8px;
}
#students .enroll i.fa.fa-check,
#student .enroll i.fa.fa-check {
  color: #45B29D;
}
#students .enroll i.fa.fa-clock-o,
#student .enroll i.fa.fa-clock-o {
  color: #F2E394;
}
#students .filter .form-group {
  margin-top: 10px;
  margin-right: 10px;
}
#students .filter .form-group label {
  margin-right: 6px;
}
#students .filter input.filter {
  height: 30px;
  padding-top: 3px;
}
#students .students .student .profile-pic {
  width: 68px;
}
#students .students .student .info {
  width: 39%;
}
#students .students .student .info .name {
  color: #45B29D;
  font-family: "Signika Semibold";
  font-size: 15px;
}
#students .students .student .info .school {
  color: #323232;
  font-family: 'Signika Light';
  font-size: 14px;
}
#students .students .student .info .address {
  color: #999999;
  font-family: 'Signika Light';
  font-size: 14px;
}
#students .students .student .enroll {
  width: 318px;
}
#students .students .student .payment i.fa.fa-money {
  color: #DF5A49;
}
#students .students .student .payment {
  width: 170px;
}
#students .students .student .payment .amount {
  text-align: right;
  float: right;
}
#students .students .student .enroll,
#students .students .student .payment,
#students .students .student .actions {
  line-height: 50px;
}
#student {
  /** Bootstrap Override */
}
#student header {
  margin-bottom: 10px;
}
#student header img.profile {
  height: 68px;
  width: 68px;
}
#student header .profile-pic .upload {
  width: 100%;
  text-align: center;
}
#student header .upload .preview {
  font-size: 11px;
  margin-top: 3px;
}
#student header .middle {
  padding-left: 0;
}
#student header .middle input.form-control {
  width: 30%;
  float: left;
  margin-right: 5px;
  margin-top: 6px;
}
#student header .middle .status {
  float: left;
  clear: both;
  margin-top: 9px;
}
#student header .middle .status .no-info {
  color: #a0a0a0;
}
#student header .actions {
  padding-top: 2px;
}
#student .save.btn {
  width: 110px;
}
#student .panel {
  margin-bottom: 10px;
}
#student .first-name {
  padding-right: 5px;
}
#student .last-name {
  padding-left: 5px;
}
#student .year {
  width: 107px;
}
#student .others textarea {
  height: 75px;
  max-width: 485px;
}
#student .others i.fa {
  font-size: 1.6em;
}
#student .others .social {
  margin-top: 8px;
}
#student .others .social label {
  padding-right: 0;
}
#student .form-group {
  margin-bottom: 10px;
}
#student .form-horizontal .control-label {
  padding-top: 2px;
}
#student .date-picker {
  width: 100%;
}
/*****************
/* Titled Panel */
/****************/
.panel {
  border: 1px solid #fafafa;
  border-radius: 3px;
}
.panel .panel-title {
  background: #F2F2F2;
  color: #323232;
  box-shadow: 0 2px 2px rgba(0, 0, 0, 0.3);
  font-family: 'Signika Semibold';
  font-size: 15px;
  padding: 3px 12px 2px 12px;
  border-radius: 3px;
}
.form-group.inline label {
  text-align: left;
  margin-bottom: 5px;
}
.student {
  text-align: left;
  margin-bottom: 10px;
}
.student .profile-pic img {
  width: 50px;
  height: 50px;
}
