/***
 Site's variables
*****/
/* Common */
#students i.fa,
#student i.fa {
  margin-right: 8px;
}
#students .enroll i.fa.fa-check,
#student .enroll i.fa.fa-check {
  color: #45B29D;
}
#students .enroll i.fa.fa-clock-o,
#student .enroll i.fa.fa-clock-o {
  color: #F2E394;
}
#students {
  min-width: 360px;
}
#students .filter .form-group {
  margin-top: 10px;
  margin-right: 10px;
}
#students .filter .form-group label {
  margin-right: 6px;
}
#students .filter input.filter {
  height: 30px;
  padding-top: 3px;
}
#students .students .student {
  padding-left: 10px;
  padding-right: 10px;
}
#students .students .student .col-xs-1,
#students .students .student .col-xs-2,
#students .students .student .col-xs-3,
#students .students .student .col-xs-4,
#students .students .student .col-xs-5,
#students .students .student .col-xs-6,
#students .students .student .col-xs-7,
#students .students .student .col-xs-8,
#students .students .student .col-xs-9,
#students .students .student .col-xs-10,
#students .students .student .col-xs-11,
#students .students .student .col-xs-12 {
  padding-left: 0;
  padding-right: 0;
}
#students .students .student .profile-pic {
  width: 68px;
  min-width: 68px;
}
#students .students .student .info {
  padding-left: 0;
}
#students .students .student .info .name {
  color: #45B29D;
  font-family: "Signika Semibold";
  float: left;
  font-size: 15px;
  margin-right: 6px;
}
#students .students .student .info .email {
  font-size: 14px;
  font-style: italic;
  color: darkgray;
  float: left;
  margin-right: 6px;
}
#students .students .student .info .school {
  color: #323232;
  font-family: 'Signika Light';
  font-size: 14px;
  float: left;
  margin-right: 6px;
}
#students .students .student .info .address {
  color: #999999;
  font-family: 'Signika Light';
  font-size: 14px;
  float: left;
  margin-right: 6px;
}
#students .students .student .account a.no-user {
  color: #d3d3d3;
}
#students .students .student .account a.has-user {
  color: #5f5f5f;
}
#students .students .student .enroll {
  min-width: 280px;
}
#students .students .student .payment i.fa.fa-money {
  color: #DF5A49;
}
#students .students .student .payment {
  min-width: 140px;
}
#students .students .student .payment .amount {
  text-align: right;
  float: right;
}
#students .students .student .account {
  line-height: 55px;
  font-size: 21px;
}
#students .students .student .enroll,
#students .students .student .payment,
#students .students .student .actions {
  line-height: 50px;
}
@media (min-width: 768px) {
  #students .students .student .actions {
    float: right;
  }
}
@media (max-width: 1200px) {
  #students .students .student .actions {
    float: left;
    height: 35px;
    line-height: 53px;
  }
  #students .students .student .enroll,
  #students .students .student .payment {
    line-height: 35px;
  }
}
@media (max-width: 767px) {
  #students .students .student .payment {
    line-height: 14px;
    height: 17px;
    clear: both;
  }
}
#students .students .student .actions {
  margin-right: 0;
  width: 58px;
}
#students .students .student .actions a {
  display: block;
  margin-left: 6px;
  float: left;
}
#student {
  /** Bootstrap Override */
}
#student header {
  margin-bottom: 10px;
}
#student header img.profile {
  height: 68px;
  width: 68px;
  float: left;
}
#student header .profile-pic .upload {
  text-align: center;
  float: left;
  width: 150px;
}
#student header .upload-link {
  float: left;
  margin-top: 5px;
  margin-left: 12px;
  font-size: 14px;
}
#student header .upload input[type='file'] {
  display: none;
}
#student header .upload .preview {
  font-size: 11px;
  margin-top: 3px;
}
@media (max-width: 1200px) {
  #student header .profile-pic {
    width: 10%;
  }
}
@media (max-width: 992px) {
  #student header .profile-pic {
    width: 11%;
  }
}
#student header .name {
  margin-top: 10px;
}
#student header .name > div {
  padding-left: 0;
}
#student header .name input {
  float: left;
  margin-right: 5px;
  margin-top: 6px;
}
#student header .status {
  float: left;
  clear: both;
  margin-top: 9px;
}
#student header .status .no-info {
  color: #a0a0a0;
}
#student header .actions {
  position: absolute;
  top: 42px;
  right: 15px;
}
#student .save.btn {
  width: 110px;
}
#student .panel {
  margin-bottom: 10px;
}
#student .first-name {
  padding-right: 5px;
}
#student .last-name {
  padding-left: 5px;
}
#student .parents .control-label {
  text-align: left;
}
#student .parents .contact {
  padding-top: 10px;
}
@media (max-width: 992px) and (min-width: 768px) {
  #student .parents .control-label {
    text-align: right;
  }
}
#student .year {
  width: 107px;
}
#student .others textarea {
  height: 75px;
  max-width: 485px;
}
#student .others i.fa {
  font-size: 1.6em;
}
#student .others .social {
  margin-top: 8px;
}
#student .others .social label {
  padding-right: 0;
}
#student .form-group {
  margin-bottom: 10px;
}
#student .form-horizontal .control-label {
  padding-top: 2px;
}
#student .date-picker {
  width: 100%;
}
footer.admin {
  min-width: 465px;
}
