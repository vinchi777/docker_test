#test {
    form {
        header {
            .actions {
                text-align: right;
                * {
                    vertical-align: top;
                }

                .btn {
                    margin-top: 22px;
                }
            }
            .row {
                margin-bottom: 10px;
                img {
                    width: 17px;
                }

                .timer {
                    margin: 0px 5px 0px 10px;
                    width: 50px;
                    display: inline-block;
                }

                .radio {
                    margin-top: 4px;
                }
            }
            .bar {
                .pull-left {
                    color: #999999;
                    margin-bottom: 3px;
                }
            }
            hr {
                clear: both;
            }
        }
        .question {
            tr :last-of-type {
                padding-bottom: 0px;
            }
            td {
                padding-top: 0px;
                border-top: none;
                &:nth-of-type(2) {
                    width: 10px;
                    border-left: solid 1px #e5e5e5;
                }
                &:first-of-type {
                    width: 50px;
                    padding-left: 0px;
                }
                &:last-of-type {
                    padding-right: 0px;
                }
                .question-no, .new-question {
                    width: 32px;
                    height: 38px;

                }
                .question-no{
                    background: url("<%= image_path 'test-yellow.svg' %>");
                    text-align: center;
                    font-family: 'Signika Semibold';
                    color: white;
                    padding-top: 10px;
                }
                a.new-question {
                    display: inline-block;
                    background: url("<%= image_path 'new-question.svg' %>");
                }

                .add-rationale {
                    color: #999;
                    text-decoration: none;
                    .fa {
                        margin-right: 5px;
                    }
                    &:hover {
                        color: #333;
                    }
                }
            }

            textarea {
                padding: 3px 10px;
                min-width: 100%;
                max-width: 100%;
                min-height: 30px;
                height: 30px;

                /*&.big {
                    height: 55px;
                }*/
            }

            input[type='radio'] {
                margin-top: 9px;
            }
        }

        /*.question-wrapper {
