@gray: #b2b2b2;
@height: 120px;

.points(@margin-top:35px) {
    .points {
        margin-top: @margin-top;
        z-index: 1;
        color: #ffffff;

        h2 {
            line-height: 0.5;
            &.inline {
                display: inline-block;
            }
        }

        .point-wrapper {
            line-height: 0.5;
        }

        b {
            font-size: 36px;
            line-height: 0.5;
        }
        span {
            font-size: 14px;
            color: @gray;
        }

        .pr {
            vertical-align: top;
            margin-right: -12px;
            margin-left: 1px;
            font-size: 12px;
        }
    }
}

#grades-tests {
    h5 {
        margin-bottom: 5px;
        color: #4c4c4c;
    }

    hr {
        margin-top: 0px;
    }
    .description {
        text-align: center;
        h6 {
            margin: 15px 0px 0px 0px;
            line-height: 0.6;
        }
    }

    .new-test-wrapper, .new-grade-wrapper {
        padding-right: 0px;
        margin-right: -28px;
    }

    .new-test {
        background: url("<%= asset_path 'new-test.svg' %>") no-repeat;
        height: @height;
    }

    .test {
        text-align: center;
        margin-bottom: 15px;
        .summary {
            background: url("<%= asset_path 'test.svg' %>") no-repeat center top;
            height: @height;
            .timer {
                padding: 5px 65px 0px 0px;
                img {
                    height: 17px;
                    width: 17px;
                }
            }
            .points;
        }
    }

    @border-size: 6px;
    @skew: 0deg;
    .new-grade {
        background: url("<%= asset_path 'new-grade.svg' %>") no-repeat left @border-size;
        height: @height+@border-size*2;
        width: @height;
    }
    .grade {
        text-align: center;
        margin-bottom: 15px;
        .wrapper {
            height: @height+@border-size*2;

            .summary {
                height: @height;
                width: @height;
                position: absolute;
                border-radius: 50%;
                background: #4c4c4c;
                top: 5px;
                z-index: -1;
                left: 17%;
                .arc {
                    overflow: hidden;
                    position: absolute;
                    top: -@border-size+1;
                    right: 50%;
                    bottom: 50%;
                    left: -@border-size+1;
                    transform-origin: 100% 100%;

                    // border colors
                    @green: #45b29d;
                    @green2: #84d3c4;
                    @yellow: #efc94c;
                    @yellow2: #e4c382;
                    @red: #df5a49;
                    @red2: #cc7371;
                    &:before {
                        content: attr(data-content);
                        box-sizing: border-box;
                        display: block;
                        border: solid @border-size @green;
                        width: 200%;
                        height: 200%;
                        border-radius: 50%;
                        transform: skewX(-@skew);
                        content: '';
                    }

                    &.arc1 {
                        transform: rotate(90deg) skewX(@skew);
                    }

                    &.arc2 {
                        transform: rotate(180deg) skewX(@skew);
                    }

                    &.arc3 {
                        transform: rotate(270deg) skewX(@skew);
                    }

                    &.arc4 {
                        transform: rotate(0deg) skewX(@skew);
                    }
                }
                .points;
                .status {
                    margin-top: 5px;
                    img {
                        height: 17px;
                        &:first-of-type {
                            margin-right: 4px;
                        }
                        &:last-of-type {
                            margin-left: 4px;
                        }
                    }
                }
            }
        }
    }
}

#grade-modal {
    .control-label {
        padding-top: 3px;
    }

    .over {
        padding-left: 0px;
        padding-right: 0px;
        text-align: center;
        font-weight: normal;
    }

    .score-wrapper {
        padding-right: 0px;
    }

    .points-wrapper {
        padding-left: 0px;
    }

    .modal-footer {
        b {
            display: inline-block;
            padding-top: 2px;
            font-size: 21px;
        }

        .pr {
            font-size: 12px;
            display: inline-block;
            margin-left: 2px;
            vertical-align: top;
            margin-top: 5px;
        }
    }
}

.search-wrapper .form-control {
    height: 30px;
    background: url("<%= asset_path 'search.svg' %>") no-repeat 7px 6px;
    background-size: 17px;
    padding-left: 33px;
    text-align: left;
}

#batch-grades {
    form {
        .actions {
            text-align: right;
            * {
                vertical-align: top;
            }
        }

        table {
            margin-top: 10px;
            * {
                text-align: center;
            }
            thead {
                td {
                    padding-top: 0px;
                    padding-bottom: 2px;
                    border-bottom: solid 4px #999999;
                    &.active {
                        border-bottom-color: #EFC94C;
                        background-color: transparent;
                    }
                }
                h6 {
                    margin: 0px
                }
                .table-actions {
                    text-align: left;
                    padding-left: 20px;
                    padding-top: 2px;
                    * {
                        display: inline-block;
                        vertical-align: top;
                    }
                    .edit-students {
                        margin-top: 10px;
                        color: #cccccc;
                        font-size: 20px;
                    }
                    .search-wrapper {
                        margin-left: 21px;
                        width: 80%;
                        .form-control {
                            text-align: left;
                            width: 100%;
                        }

                    }
                }
                .add-grade {
                    display: inline-block;
                    font-size: 35px;
                    color: #cccccc;
                    height: 30px;
                    line-height: 1.2;
                }
                .add-grade:hover, .edit-students:hover {
                    color: #7f7f7f;
                }
            }
            tbody tr {
                &:nth-of-type(odd) {
                    background-color: #f2f2f2;
                }
                &:hover {
                    background-color: #f4e8c1;
                }
                &.current {
                    background-color: #f2e394;
                }
                &.error {
                    background-color: #d39090;
                    color: #ffffff;
                }
            }
            td {
                width: 140px;
                min-width: 140px;
                border-top: none;
                &:last-of-type {
                    width: 50px;
                }
            }
            .student {
                text-align: left;
                width: 350px;

                .profile {
                    width: 40px;
                    height: 40px;
                }
            }
            .form-control {
                width: 65px;
                margin: 0 auto;
                margin-top: 4px;
            }
        }
    }
}

#students-select-modal {
    .modal-lg {
        width: 80%;
        .modal-header {
            h4, .search-wrapper {
                display: inline-block;
                vertical-align: top;
            }
            .search-wrapper {
                margin-left: 10px;
                width: 40%;
                min-width: 400px;
            }
            .overall-count span {
                color: #b2b2b2;
            }
            hr {
                margin-bottom: 0px;
            }
        }
        .modal-body {
            max-height: 420px;
            overflow-y: auto;
            .batch {
                margin-bottom: 25px;
                .bar {
                    text-align: center;
                    margin-bottom: 10px;
                    *, .fa-checked-circle-o {
                        color: #4c4c4c;
                    }
                    .fa-circle-o, span {
                        color: #b2b2b2;
                    }
                    .toggle {
                        float: left;
                    }
                    h5 {
                        display: inline-block;
                        margin: 0;
                    }
                    .count {
                        float: right;
                    }
                }

                .student {
                    margin-bottom: 10px;
                    .profile-pic {
                        position: relative;
                        .fa-check {
                            visibility: visible;
                            position: absolute;
                            color: #efc94c;
                            bottom: -17px;
                            right: -6px;
                            font-size: 13px;
                        }
                        &.excluded {
                            .fa-check {
                                visibility: hidden;
                            }
                            img {
                                border-color: #cccccc;
                            }
                        }
                    }
                }
            }
            .previous-batch {
                text-align: center;
                margin-bottom: 20px;
                a {
                    color: #cccccc;
                    text-decoration: none;
                    p {
                        margin: 0px;
                        line-height: 0.5;
                    }
                    &:hover {
                        color: darken(#cccccc, 50%);
                    }
                }
            }
        }
        .modal-footer {
            background-color: #588c7e;
            border-top: solid 2px darken(#588c7e, 5%);
            .btn {
                font-family: 'Signika Semibold';
                padding: 6px 20px;
            }
        }
    }
}