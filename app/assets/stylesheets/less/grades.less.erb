@gray: #b2b2b2;
@height: 120px;

.points(@margin-top:35px) {
    .points {
        margin-top: @margin-top;
        z-index: 1;
        color: #ffffff;

        h2 {
            line-height: 0.5;
            &.inline {
                display: inline-block;
            }
        }

        .point-wrapper {
            line-height: 0.5;
        }

        b {
            font-size: 36px;
            line-height: 0.5;
        }
        span {
            font-size: 14px;
            color: @gray;
        }

        .pr {
            vertical-align: top;
            margin-right: -12px;
            margin-left: 1px;
            font-size: 12px;
        }
    }
}

#grades-tests {
    h5 {
        margin-bottom: 5px;
        color: #4c4c4c;
    }

    hr{
        margin-top: 0px;
    }
    .description {
        text-align: center;
        h6 {
            margin: 15px 0px 0px 0px;
            line-height: 0.6;
        }
    }

    .new-test-wrapper, .new-grade-wrapper {
        padding-right: 0px;
        margin-right: -28px;
    }

    .new-test {
        background: url("<%= asset_path 'new-test.svg' %>") no-repeat;
        height: @height;
    }

    .test {
        text-align: center;
        margin-bottom: 15px;
        .summary {
            background: url("<%= asset_path 'test.svg' %>") no-repeat center top;
            height: @height;
            .timer {
                padding: 5px 65px 0px 0px;
                img {
                    height: 17px;
                    width: 17px;
                }
            }
            .points;
        }
    }

    @border-size: 6px;
    @skew: 0deg;
    .new-grade {
        background: url("<%= asset_path 'new-grade.svg' %>") no-repeat left @border-size;
        height: @height+@border-size*2;
        width: @height;
    }
    .grade {
        text-align: center;
        margin-bottom: 15px;
        .wrapper {
            height: @height+@border-size*2;

            .summary {
                height: @height;
                width: @height;
                position: absolute;
                border-radius: 50%;
                background: #4c4c4c;
                top: 5px;
                z-index: -1;
                left: 17%;
                .arc {
                    overflow: hidden;
                    position: absolute;
                    top: -@border-size+1;
                    right: 50%;
                    bottom: 50%;
                    left: -@border-size+1;
                    transform-origin: 100% 100%;

                    // border colors
                    @green: #45b29d;
                    @green2: #84d3c4;
                    @yellow: #efc94c;
                    @yellow2: #e4c382;
                    @red: #df5a49;
                    @red2: #cc7371;
                    &:before{
                        box-sizing: border-box;
                        display: block;
                        border: solid @border-size @green;
                        width: 200%;
                        height: 200%;
                        border-radius: 50%;
                        transform: skewX(-@skew);
                        content: '';
                    }

                    &.arc1{
                        transform: rotate(90deg) skewX(@skew);
                    }

                    &.arc2{
                        transform: rotate(180deg) skewX(@skew);
                    }

                    &.arc3{
                        transform: rotate(270deg) skewX(@skew);
                    }

                    &.arc4{
                        transform: rotate(0deg) skewX(@skew);
                    }
                }
                .points;
                .status {
                    margin-top: 5px;
                    img {
                        height: 17px;
                        &:first-of-type {
                            margin-right: 4px;
                        }
                        &:last-of-type {
                            margin-left: 4px;
                        }
                    }
                }
            }
        }
    }
}