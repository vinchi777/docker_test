@import "bootstrap/variables";
@import "variables";

b {
    font-family: 'Signika Semibold';
    font-weight: normal;
}

h2 {
    margin: 0;
}

a, a:hover, a:active, a:focus {
    outline: none;
}

.header + * {
    margin-top: @navbar-height + 2px;
}

/*** Alert Box ****/
.alert {
    position: fixed;
    left: 30px;
    right: 30px;
    bottom: 14px;
    z-index: 100;
}

.footer {
    .main {
        background-color: #333333;
        color: #E6E6E6;
        text-align: center;
        font-size: 14px;

        .share {
            padding: 35px 0;
            .social-media {
                display: inline-block;
                padding: 0 7px;
            }
        }

        .copyright span {
            font-family: 'Signika Semibold';
            color: #fff
        }

        .info {
            padding: 50px 0px 15px 0px;
            .contact {
                display: inline-block;
                padding: 0 7px;
                .fa {
                    padding-right: 5px;
                }
            }
        }
    }

    #map {
        border: 0;
        height: 330px;
        width: 100%;
    }
}

* {
    @in: 300ms;
    -webkit-transition: background-color @in ease, border-color @in ease, color @in ease, fill @in ease;
    -moz-transition: background-color @in ease, border-color @in ease, color @in ease, fill @in ease;
    -o-transition: background-color @in ease, border-color @in ease, color @in ease, fill @in ease;
    transition: background-color @in ease, border-color @in ease, color @in ease, fill @in ease;
}

.btn-black {
    background-color: @gray-dark;
    color: #fff;
}

.btn-black:hover {
    background-color: darken(@gray-dark, 5%);
    color: #fff;
}

.btn-secondary {
    background-color: #EFC94C;
    font-family: 'Signika Semibold';
    color: @gray-dark;
}

.btn-secondary:hover {
    background-color: darken(#EFC94C, 5%);
    color: @gray-dark;
}

.error.panel,
.alert-warning {
    background: #D96459;
    color: #ffffff;
    border: none;
}

.error.panel {
    padding: 7px 10px;
}

.error.panel ul {
    margin-bottom: 0;
}

.error.panel h2 {
    font-size: 15px;
    margin-bottom: 5px;
}

input.form-control.date-picker {
    background-image: url("<%= image_path 'calendar.svg'%>");
    background-repeat: no-repeat;
    background-position: 7px 6px;
    background-size: 17px;
    padding-left: 33px !important;
}

img.profile {
    border-radius: 100%;
    border: 2px solid #EFC94C;
}

input.peso {
    background-image: url("<%= image_path 'peso-ico.svg'%>");
    background-repeat: no-repeat;
    background-position: 6px 6px;
    background-size: 26px auto;
    padding-left: 35px !important;
    text-align: right;
    width: 128px;
}

.auto-width {
    width: auto;
}