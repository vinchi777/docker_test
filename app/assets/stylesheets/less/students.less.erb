@import "variables";

/* Common */
#students, #student {
    i.fa {
        margin-right: 8px;
    }

    .enroll i.fa.fa-check {
        color: #45B29D;
    }

    .enroll i.fa.fa-clock-o {
        color: #F2E394;
    }
}

#students {

    .filter .form-group {
        margin-top: 10px;
        margin-right: 10px;
    }

    .filter .form-group label {
        margin-right: 6px;
    }

    .filter input.filter {
        height: 30px;
        padding-top: 3px;
    }

    .students .student .profile-pic {
        width: 68px;
    }

    .students .student .info {
        width: 39%;

        .name {
            color: #45B29D;
            font-family: "Signika Semibold";
            font-size: 15px;
            float: left;
            margin-right: 6px;
        }
        .email {
            font-size: 14px;
            font-style: italic;
            color: darkgray;
        }
        .school {
            color: #323232;
            font-family: 'Signika Light';
            font-size: 14px;
        }
        .address {
            color: #999999;
            font-family: 'Signika Light';
            font-size: 14px;
        }
    }

    .students .student .account a.no-user {
        color: #d3d3d3;
    }

    .students .student .account a.has-user {
        color: #5f5f5f;
    }

    .students .student .account,
    .students .student .actions {
        padding: 0;
        width: 3.3%;
    }

    .students .student .enroll {
        width: 318px;
    }

    .students .student .payment i.fa.fa-money {
        color: #DF5A49;
    }

    .students .student .payment {
        width: 170px;
    }

    .students .student .payment .amount {
        text-align: right;
        float: right;
    }

    .students .student .account {
        line-height: 55px;
        font-size: 21px;
    }
    .students .student .enroll,
    .students .student .payment,
    .students .student .actions {
        line-height: 50px;
    }
}

#student {

    header {
        margin-bottom: 10px;
    }

    header img.profile {
        height: 68px;
        width: 68px;
    }

    header .profile-pic .upload {
        width: 100%;
        text-align: center;
    }

    header .upload .preview {
        font-size: 11px;
        margin-top: 3px;
    }

    header .middle {
        padding-left: 0;
    }

    header .middle input.form-control {
        width: 30%;
        float: left;
        margin-right: 5px;
        margin-top: 6px;
    }

    header .middle .status {
        float: left;
        clear: both;
        margin-top: 9px;
    }

    header .middle .status .no-info {
        color: #a0a0a0;
    }

    header .actions {
        padding-top: 2px;
    }

    .save.btn {
        width: 110px;
    }

    .panel {
        margin-bottom: 10px;
    }

    .first-name {
        padding-right: 5px;
    }

    .last-name {
        padding-left: 5px;
    }

    .year {
        width: 107px;
    }

    .others textarea {
        height: 75px;
        max-width: 485px;
    }

    .others i.fa {
        font-size: 1.6em;
    }

    .others .social {
        margin-top: 8px;
    }

    .others .social label {
        padding-right: 0;
    }

    /** Bootstrap Override */
    .form-group {
        margin-bottom: 10px;
    }

    .form-horizontal .control-label {
        padding-top: 2px;
    }

    .date-picker {
        width: 100%;
    }
}

/*****************
/* Titled Panel */
/****************/
.panel {
    border: 1px solid @lightest-gray;
    border-radius: 3px;
}

.panel .panel-title {
    background: #F2F2F2;
    color: #323232;
    box-shadow: 0 2px 2px rgba(0, 0, 0, .3);
    font-family: 'Signika Semibold';
    font-size: 15px;
    padding: 3px 12px 2px 12px;
    border-radius: 3px;
}

.form-group.inline label {
    text-align: left;
    margin-bottom: 5px;
}

.student-list {
    text-align: left;
    margin-bottom: 10px;

    .profile-pic {
        margin-right: 10px;
        img {
            width: 50px;
            height: 50px;
        }
    }
}