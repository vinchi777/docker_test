/***
 Site's variables
*****/
b {
  font-family: 'Signika Semibold';
  font-weight: normal;
}
h2 {
  margin: 0;
}
.header + * {
  margin-top: 67px;
}
/*** Alert Box ****/
.alert {
  position: fixed;
  left: 30px;
  right: 30px;
  bottom: 14px;
  z-index: 100;
}
.footer .main {
  background-color: #333333;
  color: #E6E6E6;
  text-align: center;
  font-size: 14px;
}
.footer .main .share {
  padding: 35px 0;
}
.footer .main .share .social-media {
  display: inline-block;
  padding: 0 7px;
}
.footer .main .copyright span {
  font-family: 'Signika Semibold';
  color: #ffffff;
}
.footer .main .info {
  padding: 50px 0px 15px 0px;
}
.footer .main .info .contact {
  display: inline-block;
  padding: 0 7px;
}
.footer .main .info .contact .fa {
  padding-right: 5px;
}
.footer #map {
  border: 0;
  height: 330px;
  width: 100%;
}
button,
a {
  -webkit-transition: background-color 300ms ease, border-color 300ms ease;
  -moz-transition: background-color 300ms ease, border-color 300ms ease;
  -o-transition: background-color 300ms ease, border-color 300ms ease;
  transition: background-color 300ms ease, border-color 300ms ease;
}
.btn-black {
  background-color: #333333;
  color: #fff;
}
.btn-black:hover {
  background-color: #262626;
  color: #fff;
}
.error.panel,
.alert-warning {
  background: #D96459;
  color: #ffffff;
  border: none;
}
.error.panel {
  padding: 7px 10px;
}
.error.panel ul {
  margin-bottom: 0;
}
.error.panel h2 {
  font-size: 15px;
  margin-bottom: 5px;
}
input.form-control.date-picker {
  background-image: url("<%= image_path 'calendar.svg'%>");
  background-repeat: no-repeat;
  background-position: 7px 6px;
  background-size: 17px;
  padding-left: 33px !important;
}
img.profile {
  border-radius: 100%;
  border: 2px solid #EFC94C;
}
input.peso {
  background-image: url("<%= image_path 'peso-ico.svg'%>");
  background-repeat: no-repeat;
  background-position: 6px 6px;
  background-size: 26px auto;
  padding-left: 35px !important;
  text-align: right;
  width: 128px;
}
